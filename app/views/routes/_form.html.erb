<%= form_for(@route) do |f| %>
  <%#=render 'shared/error_messages', data: f.object %>
  <div class="pull-left">
    <div class="field pull-left">
      <%= f.label :src_location_id %><br />
      <%= f.text_field :src_location_id %>
    </div>
    <div class="field pull-left">
      <%= f.label :dst_location_id %><br />
      <%= f.text_field :dst_location_id %>
    </div>
    <div class="clearfix"> </div>
    <div class="field pull-left">
      <%= f.label :departure_date %><br />
      <%= f.text_field :departure_date %>
    </div>
    <div class="field pull-left">
      <%= f.label :arrival_date %><br />
      <%= f.text_field :arrival_date %>
    </div>
    <div class="field">
      <%= f.label :places %><br />
      <%= f.number_field :places %>
    </div>
  </div>

  <div class="pull-left">
    <div class="field">
      <%= f.label :details %><br />
      <%= f.text_area :details %>
    </div>
  </div>
  <div class="clearfix"> </div>
  <div class="actions">
    <%= f.submit class: 'btn' %>
  </div>
<% end %>
