<h1>Listing routes</h1>

<table>
  <tr>
    <th>User</th>
    <th>From</th>
    <th>To</th>
    <th>Departure date</th>
    <th>Arrival data</th>
    <th>Places</th>
    <th>Details</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= route.user_id %></td>
    <td><%= route.src_location_id %></td>
    <td><%= route.dst_location_id %></td>
    <td><%= route.departure_date %></td>
    <td><%= route.arrival_data %></td>
    <td><%= route.places %></td>
    <td><%= route.details %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

