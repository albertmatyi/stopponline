<%= form_for(@route) do |f| %>
  <%#=render 'shared/error_messages', data: f.object %>
  <div class="pull-left">
    <div class="field pull-left">
      <%= f.label :src_location_id %><br />
      <%= f.text_field :src_location_id, placeholder: 'Departure location', 
        class: 'suggestionInput', required: true, autocomplete: false %>
    </div>
    <div class="field pull-left">
      <%= f.label :dst_location_id %><br />
      <%= f.text_field :dst_location_id, placeholder: 'Destination location', class: 'suggestionInput', required: true %>
    </div>
    <div class="clearfix"> </div>
    <div class="field pull-left">
      <%= f.label :departure_date %><br />
      <%= f.text_field :departure_date, placeholder: 'Date of the departure', required: true %>
    </div>
    <div class="field pull-left">
      <%= f.label :arrival_date %><br />
      <%= f.text_field :arrival_date, placeholder: 'Date of arrival', required: true %>
    </div>
    <div class="field">
      <%= f.label :places %><br />
      <%= f.number_field :places, placeholder: 'Number of seats available', required: true %>
    </div>
  </div>

  <div class="pull-left">
    <div class="field">
      <%= f.label :details %><br />
      <%= f.text_area :details, placeholder: 'Additional details about the voyage' %>
    </div>
  </div>
  <div class="clearfix"> </div>
  <div class="actions">
    <%= f.submit class: 'btn' %>
  </div>
<% end %>
