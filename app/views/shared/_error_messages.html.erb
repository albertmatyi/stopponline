<% if @data.errors.any? %>
  <div class="error_explanation">
    <h3> 
      <%= pluralize(@data.errors.count, "error") %> 
        prohibited this user from being saved:
    </h3>
    <p>There were problems with the following fields:</p>
    <ul>
    <% @data.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
